{
  "hosting": {
    "public": "./build/",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
        "source": "{/,/courses,/about,/c/**}",
        "destination": "/index.html"
      }, {
        "source": "/api/hello",
        "function": "hello"
      }, {
        "source": "/api/catalog",
        "function": "catalog"
      }
    ],
    "headers": [{
      "source": "/api/**",
      "headers": [{
        "key": "Access-Control-Allow-Origin",
        "value":"*"
      }, {
        "key": "Cache-Control",
        "value": "public, max-age=259200"
      }]
    }],
    "predeploy": "npm run build"
  }
}
