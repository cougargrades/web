{
  "hosting": {
    "public": "./build/",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
        "source": "{/,/courses,/about,/c/**}",
        "destination": "/index.html"
      }, {
        "source": "/api/hello",
        "function": "hello"
      }
    ],
    "predeploy": "npm run build"
  }
}
