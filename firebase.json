{
  "hosting": {
    "public": "./build/prod/",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [ {
        "source": "/blog/:post*",
        "destination": "https://cougargrades.github.io/blog/:post",
        "type": 302
      }, {
        "source": "/swagger/:post*",
        "destination": "https://cougargrades.github.io/swagger/:post",
        "type": 302
      }
    ],  
    "rewrites": [{
        "source": "!{/api,/api/**}",
        "destination": "/index.html"
      }, {
        "source": "{/api,/api/**}",
        "function": "api"
      }
    ],
    "headers": [{
      "source": "/api/**",
      "headers": [{
        "key": "Access-Control-Allow-Origin",
        "value":"*"
      }, {
        "key": "Cache-Control",
        "value": "public, max-age=259200"
      }]
    }],
    "predeploy": "npm run predeploy"
  }
}
